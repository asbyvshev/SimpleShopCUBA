<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://orderPositionBrowse.caption"
        focusComponent="orderPositionsTable"
        messagesPack="com.company.shop.web.screens.orderposition">
    <data readOnly="true">
        <collection id="orderPositionsDc"
                    class="com.company.shop.entity.OrderPosition">
            <view extends="orderPosition-with-product-and-order"/>
            <loader id="orderPositionsDl">
                <query>
                    <![CDATA[select e from shop_OrderPosition e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="orderPositionsTable"
            spacing="true">
        <filter id="filter"
                applyTo="orderPositionsTable"
                dataLoader="orderPositionsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="orderPositionsTable"
                    width="100%"
                    dataContainer="orderPositionsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="product"/>
                <column id="quantity"/>
                <column id="salesOrder"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="orderPositionsTable.create"/>
                <button id="editBtn" action="orderPositionsTable.edit"/>
                <button id="removeBtn" action="orderPositionsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
