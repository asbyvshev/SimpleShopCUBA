<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://salesOrderEdit.caption"
        focusComponent="form"
        messagesPack="com.company.shop.web.screens.salesorder">
    <data>
        <instance id="salesOrderDc"
                  class="com.company.shop.entity.SalesOrder">
            <view extends="salesOrder-with-customer-and-total">
                <property name="customer" view="_minimal">
                    <property name="phone"/>
                    <property name="email"/>
                </property>
            </view>
            <loader/>
        </instance>
        <collection id="orderPositionsDc" class="com.company.shop.entity.OrderPosition">
            <view extends="_local"/>
            <loader id="orderPositionsDl">
                <query>
                    <![CDATA[select e from shop_OrderPosition e where e.salesOrder = :salesOrder]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="salesOrderDc">
            <column width="350px">
                <textField id="orderNumberField" property="orderNumber"/>
                <pickerField id="customerField" property="customer">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
